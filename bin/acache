#!/bin/bash

pushd $WORKDIR/ansible/ > /dev/null

function sha1key() {
  A=$(echo -n "$1" | sha1sum)
  echo -n ${A:0:5}
}

function cache_prefix() {
  echo -n $(sha1key "azure.azcollection.azure_rm")
  echo -n s_
  echo -n $(sha1key "$PWD/$ANSIBLE_INVENTORY")
}

file="${ANSIBLE_CACHE_PLUGIN_CONNECTION}/ansible_inventory_azure*_$(cache_prefix)"

echo Removing: ansible/$file
rm -f $file

popd > /dev/null
